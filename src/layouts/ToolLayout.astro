---
import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro";
import RelatedTools from "../components/ui/RelatedTools.astro";
import { getRelatedTools } from "../lib/tools";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  slug: string;
  keywords?: string[];
}

const { title, description, slug, keywords = [] } = Astro.props;
const relatedTools = getRelatedTools(slug);
const canonicalUrl = `https://devutils.tools/${slug}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Free Online Tool | DevUtils</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(", ")} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} - DevUtils`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} - DevUtils`} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Dark mode (no flash) -->
    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      }
    </script>
  </head>
  <body
    class="flex min-h-screen flex-col bg-gray-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100"
  >
    <Header />

    <main class="mx-auto w-full max-w-5xl flex-1 px-4 py-8">
      <h1 class="mb-6 text-3xl font-bold">{title}</h1>

      <!-- Tool Component (React Island) -->
      <div
        class="mb-8 rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800"
      >
        <slot name="tool" />
      </div>

      <!-- SEO Content (MDX) -->
      <article class="prose prose-gray max-w-none dark:prose-invert">
        <slot />
      </article>

      <!-- Related Tools -->
      <RelatedTools tools={relatedTools} />
    </main>

    <Footer />
  </body>
</html>
