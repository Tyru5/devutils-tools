---
import type { Tool } from "../../lib/tools";

interface Props {
  tools: Tool[];
}

const { tools } = Astro.props;
---

<div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
  {
    tools.map((tool) => (
      <a
        href={`/${tool.slug}`}
        class="group block rounded-lg border border-neutral-200 bg-white p-5 transition-colors hover:border-neutral-400 dark:border-neutral-800 dark:bg-neutral-950 dark:hover:border-neutral-600"
      >
        <h3 class="mb-2 font-medium text-neutral-900 dark:text-neutral-100">
          {tool.name}
        </h3>
        <p class="text-sm text-neutral-500 dark:text-neutral-500">
          {tool.shortDescription}
        </p>
      </a>
    ))
  }
</div>
